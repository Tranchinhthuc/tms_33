<% if @user_tasks %>
  <h2><%= t "application.title.your_progress" %></h2>
  <% if @course %>
    <%= progress_bar(@course.course_progress, color: "blue", rounded: true) %>
  <% else %>
    <%= progress_bar(0, color: "blue", rounded: true) %>
  <% end %>
  <table class="table table-hover">
    <tr>
      <th class="col-sm-2 text-center"><%= t "application.task_table.id" %></th>
      <th class="col-sm-7 text-center"><%= t "application.task_table.title" %></th>
      <th class="col-sm-3 text-center"><%= t "application.task_table.status" %></th>
    </tr>
    <%= paginate @user_tasks %>
    <% @user_tasks.each do |user_task| %>
      <tr>
        <td class="col-sm-2 text-center"><%= user_task.task.id %></td>
        <td class="col-sm-7 text-center"><%= user_task.task.title %></td>
        <td class="col-sm-3 text-center"><%= user_task.status_to_string %></td>
      </tr>
    <% end %>
  </table>
<% end %>
